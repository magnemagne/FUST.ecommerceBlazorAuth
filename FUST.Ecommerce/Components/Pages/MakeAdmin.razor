@page "/admin/make"

<h3>Create</h3>

<EditForm EditContext="_editContext" OnValidSubmit="RegisterAdmin">
	<DataAnnotationsValidator />

	<div>
		<label for="txtEmail">Email:</label>
		<InputText class="form-control"
				   id="txtEmail"
				   @bind-Value="Email" />
		<ValidationMessage For="@(() => Email)" />
	</div>

	<hr />
	<div style="width:100%">
		<button type="submit" class="btn btn-primary">Insert</button>
		<a href="/admin/categories" class="btn btn-xs btn-secondary">Back to list</a>
	</div>
</EditForm>
<hr />
<p>@StatusContext</p>